<table class="table table-striped">
  <thead>
    <tr>
      <th>Category</th>
      <th>Patent</th>
      <th>Brand</th>
      <th>Model</th>
      <th>Fuel</th>
      <th>Kilometres</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.category.name %></td>
        <td><%= vehicle.patent %></td>
        <td><%= vehicle.brand.name %></td>
        <td><%= vehicle.model %></td>
        <td><%= vehicle.fuel %></td>
        <td><%= vehicle.kilometres %></td>
        <td><%= vehicle.value %></td>
        <td><%= link_to 'Show', vehicle %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @vehicles  %>

